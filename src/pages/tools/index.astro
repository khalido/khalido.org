---
import BaseLayout from "../../layouts/BaseLayout.astro";

// You could automate this list by reading the directory,
// but for now let's keep it simple with manual entries
const tools = [
    {
        name: "Timezone Converter",
        description:
            "Compare two timezones and see their time differences over 48 hours",
        url: "/tools/timezone-converter",
    },
    {
        name: "Word Counter",
        description: "A simple tool to count words and characters in a text.",
        url: "/tools/word-counter",
    },
    // Add more tools here as you create them
];
---

<BaseLayout title="Tools - khalido.org" description="Useful web tools">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-8">Tools</h1>

        <div class="grid gap-6 md:grid-cols-2">
            {
                tools.map((tool) => (
                    <a
                        href={tool.url}
                        class="block p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow"
                    >
                        <h2 class="text-xl font-semibold mb-2">{tool.name}</h2>
                        <p class="text-gray-600">{tool.description}</p>
                    </a>
                ))
            }
        </div>
    </div>
</BaseLayout>
